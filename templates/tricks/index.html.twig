{% extends 'base.html.twig' %}

{% block title %}Snowboard{% endblock %}

{% block header%}
  <header class="h-100 position-relative" id="carousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <!-- Slide One - Set the background image for this slide in the line below -->
        <div class="carousel-item active" style="background-image: url('{{ asset('images/bg12.jpg') }}')">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="py-3">La réussite est l'aboutissement d'une succession d'echecs</h2>
          </div>
        </div>
        <!-- Slide Two - Set the background image for this slide in the line below -->
        <div class="carousel-item" style="background-image: url('{{ asset('images/bg3.jpg') }}')">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="py-3">La réussite est l'aboutissement d'une succession d'echecs</h2>
          </div>
        </div>
        <!-- Slide Three - Set the background image for this slide in the line below -->
        <div class="carousel-item" style="background-image: url('{{ asset('images/bg4.jpg') }}')">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="py-3">La réussite est l'aboutissement d'une succession d'echecs</h2>
            {# <p>This is a description for the third slide.</p> #}
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="load-page text-center position-absolute" id="scrollBotm">
        <a href="#scrollBotm"><i class="fas fa-angle-double-down fa-7x"></i></a>
    </div>
  </header>

{% endblock %}
{% block body %}

  <div class="title-home" id="tricks">
    <h1 class="my-5 text-center text-uppercase">Snowboard</h1>
  </div>

    <section>
      <div class="row">
        {% for trick in tricks %}
          <div class="col-lg-4 mb-4">
            <div class="card h-100 rounded-0">
              <div class="card-body">
                <p class="card-text">{{ trick.content}}</p>
              </div>
              <div class="card-footer font-weight-bolder rounded-0">
                <div class="row">
                  <div class="col-lg-8 mb-6">
                    <a href="#" class="text-uppercase text-dark">{{ trick.name }}</a>
                  </div>
                  <div class="col-lg-4 text-right">
                    <a href="" class="pr-3"><i class="fas fa-edit"></i></a>
                    <a href="" class=""><i class="fas fa-trash-alt"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
    <div class="text-center font-weight-bolder py-5" id="scroll">
      <a href="#scroll" class="text-dark"><i class="far fa-arrow-alt-circle-down fa-3x"></i><span class="align-middle d-block"> Charger plus </span></a>
    </div>

    <div class="text-right py-3" id="scrollTop">
      <a href="#scrollTop"><i class="fas fa-angle-double-up fa-3x"></i></a>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('home') }}
{% endblock %}