{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block header %}
    <img src="{{ asset('images/bg11.jpg') }}" class="img-header img-fluid x-100" alt="image neige">
{% endblock %}

{% block body %}

    <h2 class="mt-4 mb-3">Réinitialisation</h2>
        <ol class="breadcrumb rounded-0">
            <li class="breadcrumb-item">
                <a href="{{ path('tricks') }}">Accueil</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('security_login') }}">Connexion</a>
            </li>
            <li class="breadcrumb-item active">Mot de passe oublié</li>
        </ol>


    {% for message in app.flashes('notice') %}
        <div class="alert alert-warning alert-dismissible fade show w-100 col-sm-12 col-md-6 offset-md-3 rounded-0" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <section id="forgot-password">
        <div class="row my-5">
            <div class="col-lg-6 offset-lg-3">
                <form method="post">
                        <p class="text-center">Entrez votre adresse email pour réinitialiser votre mot de passe</p>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control rounded-0" placeholder="Email *" required>
                        <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre email.</small>
                        </div>
                        <div class="text-right">
                        <button type="submit" class="btn btn-primary rounded-0 font-weight-bold">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
