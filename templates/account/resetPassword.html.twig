{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block header %}
    <img src="{{ asset('images/bg11.jpg') }}" class="img-header img-fluid x-100" alt="image neige">
{% endblock %}

{% block body %}

    <h2 class="mt-4 mb-3">Réinitialisation</h2>
        <ol class="breadcrumb rounded-0">
            <li class="breadcrumb-item">
                <a href="{{ path('tricks') }}">Accueil</a>
            </li>
            <li class="breadcrumb-item active">Réinitialiser le mot de passe</li>
        </ol>


    {% for message in app.flashes('notice') %}
        <div class="alert alert-warning alert-dismissible fade show w-50 col-md-6 offset-md-3 rounded-0" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <section id="forgot-password">
        <div class="row my-5">
            <div class="col-lg-6 offset-lg-3">
                <form method="post">
                    <div class="form-group">
                    <label for="email" class="font-weight-bold">Email *</label>
                        <input type="email" name="email" class="form-control rounded-0" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="password" class="font-weight-bold">Nouveau mot de passe *</label>
                        <input type="password" name="password" class="form-control rounded-0" placeholder="Mot de passe" required>
                    </div>
                    <input type="hidden" name="token" value="{{ app.request.query.get('token') }}">
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary rounded-0 font-weight-bold">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
